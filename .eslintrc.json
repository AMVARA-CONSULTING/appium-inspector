{
  "extends": [
    "plugin:react/recommended",
    "@appium/eslint-config-appium"
  ],
  "parser": "@babel/eslint-parser",
  "plugins": [
    "import",
    "react",
    "react-native",
    "@babel"
  ],
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "ignorePatterns": [
    // node_modules, dotfolders and dotfiles are ignored by default
    "dist"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "@babel/arrow-parens": 0,
    "import/no-unresolved": [
      2,
      {
        "ignore": ["electron"]
      }
    ],
    "react/prop-types": 0,
    "react-native/no-inline-styles": 2
  }
}
